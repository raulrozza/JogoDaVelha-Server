{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "prettier/prettier":[
          "error",
          {
              "singleQuote": true,
              "semi": true,
              "trailingComma": "all",
              "arrowParens": "avoid"
          }
        ]
    }
}
